@page "/carrinho"
@inject ICarrinhoService CarrinhoService
@inject NavigationManager Nav
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Carrinho - MyCOLL</PageTitle>

<div class="container py-4">
    <div class="d-flex align-items-center mb-4">
        <h1 class="mb-0 fw-bold">
            <i class="bi bi-cart3 text-primary me-2"></i>O Meu Carrinho
        </h1>
    </div>

    @if (_items == null) {
        <div class="d-flex justify-content-center align-items-center" style="min-height: 200px;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">A carregar...</span>
            </div>
        </div>
    } else if (!_items.Any()) {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="bi bi-cart-x display-1 text-muted"></i>
            </div>
            <h2 class="fw-bold text-muted">O carrinho está vazio</h2>
            <p class="text-muted mb-4">Adicione produtos para continuar</p>
            <button class="btn btn-primary btn-lg" @onclick="GoShopping">
                <i class="bi bi-shop me-2"></i>Ir às compras
            </button>
        </div>
    } else {
        <div class="row">
            <!-- Cart Items -->
            <div class="col-lg-8">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                <tr>
                                    <th style="width: 100px;">Produto</th>
                                    <th>Descrição</th>
                                    <th>Preço</th>
                                    <th style="width: 150px;">Qtd.</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in _items) {
                                    <tr>
                                        <td>
                                            @if (item.Imagem != null) {
                                                <img src="data:image/png;base64,@Convert.ToBase64String(item.Imagem)"
                                                     alt="@item.Nome"
                                                     class="img-fluid rounded shadow-sm"
                                                     style="width: 80px; height: 80px; object-fit: cover;"/>
                                            } else {
                                                <div class="bg-light rounded d-flex align-items-center justify-content-center text-muted"
                                                     style="width: 80px; height: 80px;">
                                                    <i class="bi bi-image fs-3"></i>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            <h6 class="mb-0 fw-semibold">@item.Nome</h6>
                                        </td>
                                        <td class="text-muted">@item.Preco.ToString("C")</td>
                                        <td>
                                            <div class="input-group input-group-sm" style="max-width: 120px;">
                                                <button class="btn btn-outline-secondary"
                                                        @onclick="() => UpdateQty(item.ProdutoId, item.Quantidade - 1)"
                                                        disabled="@(item.Quantidade <= 1)">
                                                    <i class="bi bi-dash"></i>
                                                </button>
                                                <span class="input-group-text bg-white px-3">@item.Quantidade</span>
                                                <button class="btn btn-outline-secondary"
                                                        @onclick="() => UpdateQty(item.ProdutoId, item.Quantidade + 1)">
                                                    <i class="bi bi-plus"></i>
                                                </button>
                                            </div>
                                        </td>
                                        <td class="fw-bold">@item.Subtotal.ToString("C")</td>
                                        <td class="text-end">
                                            <button class="btn btn-outline-danger btn-sm"
                                                    @onclick="() => RemoveItem(item.ProdutoId)"
                                                    title="Remover">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Summary -->
            <div class="col-lg-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-light py-3">
                        <h5 class="mb-0 fw-semibold">Resumo do Pedido</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Subtotal</span>
                            <span class="fw-medium">@_total.ToString("C")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Portes</span>
                            <span class="text-success fw-medium">Grátis</span>
                        </div>
                        <hr class="my-3">
                        <div class="d-flex justify-content-between mb-4">
                            <span class="h5 mb-0">Total</span>
                            <span class="h5 mb-0 text-primary fw-bold">@_total.ToString("C")</span>
                        </div>

                        <div class="mb-3">
                            <label for="obs" class="form-label small text-muted">Observações (opcional)</label>
                            <textarea id="obs" @bind="_observacoes" 
                                      class="form-control" rows="3" 
                                      placeholder="Ex: Tocar à campainha..."></textarea>
                        </div>

                        <AuthorizeView>
                            <Authorized>
                                <button class="btn btn-primary w-100 py-2 fw-semibold" @onclick="Checkout">
                                    Finalizar Encomenda <i class="bi bi-arrow-right ms-2"></i>
                                </button>
                            </Authorized>
                            <NotAuthorized>
                                <div class="alert alert-warning mb-3">
                                    <i class="bi bi-exclamation-circle me-2"></i>Faça login para finalizar
                                </div>
                                <button class="btn btn-outline-primary w-100" @onclick="GoLogin">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Fazer Login
                                </button>
                            </NotAuthorized>
                        </AuthorizeView>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<CarrinhoItem>? _items;
    private decimal _total;
    private string? _observacoes;

    protected override async Task OnAfterRenderAsync(bool firstRender) {
        if (firstRender) {
            await LoadCart();
            StateHasChanged();
        }
    }

    private async Task LoadCart() {
        try {
            _items = await CarrinhoService.GetItemsAsync() ?? new List<CarrinhoItem>();
            if (_items.Any()) {
                _total = await CarrinhoService.GetTotalAsync();
            } else {
                _total = 0;
            }
        } catch {
            _items = new List<CarrinhoItem>();
        }
    }

    private async Task UpdateQty(int produtoId, int qty) {
        if (qty < 1) return;
        await CarrinhoService.UpdateQuantidadeAsync(produtoId, qty);
        await LoadCart();
        StateHasChanged(); // Force redraw after async update
    }

    private async Task RemoveItem(int produtoId) {
        await CarrinhoService.RemoveItemAsync(produtoId);
        await LoadCart();
        StateHasChanged();
    }

    private async Task Checkout() {
        var success = await CarrinhoService.CheckoutAsync(_observacoes);
        if (success) {
            Nav.NavigateTo("/minhas-encomendas");
        }
    }

    private void GoShopping() => Nav.NavigateTo("/");
    private void GoLogin() => Nav.NavigateTo("/login");
}
