@page "/tiposcolecionaveis/edit"
@using Microsoft.EntityFrameworkCore
@using MyCOLL.Data.Entities
@using MyCOLL.Data.Data
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Editar Tipo de Colecionável</PageTitle>

<div class="container-fluid">
    @if (TipoColecionavel is null) {
        <div class="d-flex justify-content-center align-items-center" style="min-height: 400px;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">A carregar...</span>
            </div>
        </div>
    } else {
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="mb-0">
                    <i class="bi bi-pencil text-primary"></i> Editar Tipo
                </h1>
                <p class="text-muted mb-0">Modificar dados do tipo de colecionável</p>
            </div>
            <a href="/tiposcolecionaveis" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-pencil"></i> Dados do Tipo</h5>
                    </div>
                    <div class="card-body">
                        <EditForm method="post" Model="TipoColecionavel" OnValidSubmit="UpdateTipoColecionavel" FormName="edit">
                            <DataAnnotationsValidator/>
                            <ValidationSummary class="alert alert-danger" role="alert"/>
                            <input type="hidden" name="TipoColecionavel.Id" value="@TipoColecionavel.Id"/>

                            <div class="mb-3">
                                <label for="nome" class="form-label">Nome: <span class="text-danger">*</span></label>
                                <InputText id="nome" @bind-Value="TipoColecionavel.Nome" class="form-control" placeholder="Nome do tipo"/>
                                <ValidationMessage For="() => TipoColecionavel.Nome" class="text-danger"/>
                            </div>

                            <div class="mb-3">
                                <label for="ordem" class="form-label">Ordem:</label>
                                <InputNumber id="ordem" @bind-Value="TipoColecionavel.Ordem" class="form-control"/>
                                <small class="text-muted">Ordem de apresentação (menor = primeiro)</small>
                            </div>

                            <div class="mb-3">
                                <label for="urlimagem" class="form-label">URL Imagem:</label>
                                <InputText id="urlimagem" @bind-Value="TipoColecionavel.UrlImagem" class="form-control" placeholder="https://..."/>
                            </div>

                            <div class="mb-3">
                                <label for="imagem" class="form-label">Imagem:</label>
                                <InputFile id="imagem" OnChange="OnImageChange" class="form-control" accept=".png, .jpg, .jpeg"/>
                                <div class="mt-2 text-center bg-light p-2 rounded">
                                    @if (previewUrl is not null) {
                                        <img src="@previewUrl" class="img-fluid" style="max-height: 200px;"/>
                                    } else if (TipoColecionavel.Imagem is not null && TipoColecionavel.Imagem.Length > 0) {
                                        <img src="@($"data:image/png;base64,{Convert.ToBase64String(TipoColecionavel.Imagem)}")" class="img-fluid" style="max-height: 200px;"/>
                                    } else {
                                        <div class="d-flex align-items-center justify-content-center" style="height: 100px;">
                                            <span class="text-muted"><i class="bi bi-image"></i> Sem imagem</span>
                                        </div>
                                    }
                                </div>
                            </div>

                            <hr/>
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-lg"></i> Guardar Alterações
                                </button>
                                <a href="/tiposcolecionaveis" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-lg"></i> Cancelar
                                </a>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [SupplyParameterFromQuery] private int Id { get; set; }
    [SupplyParameterFromForm] private TipoColecionavel? TipoColecionavel { get; set; }
    private string? previewUrl;

    private async Task OnImageChange(InputFileChangeEventArgs e) {
        var file = e.File;
        var maxSize = 5 * 1024 * 1024;

        if (file.Size > maxSize) return;

        using var stream = new MemoryStream();
        await file.OpenReadStream(maxSize).CopyToAsync(stream);
        TipoColecionavel!.Imagem = stream.ToArray();

        using var previewStream = new MemoryStream();
        await file.OpenReadStream(maxSize).CopyToAsync(previewStream);
        var base64 = Convert.ToBase64String(previewStream.ToArray());
        previewUrl = $"data:{file.ContentType};base64,{base64}";
    }

    protected override async Task OnInitializedAsync() {
        using var context = DbFactory.CreateDbContext();
        TipoColecionavel ??= await context.TiposColecionaveis.FirstOrDefaultAsync(m => m.Id == Id);

        if (TipoColecionavel is null) {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task UpdateTipoColecionavel() {
        using var context = DbFactory.CreateDbContext();
        context.Attach(TipoColecionavel!).State = EntityState.Modified;

        try {
            await context.SaveChangesAsync();
        } catch (DbUpdateConcurrencyException) {
            if (!TipoColecionavelExists(TipoColecionavel!.Id)) {
                NavigationManager.NavigateTo("notfound");
            } else {
                throw;
            }
        }

        NavigationManager.NavigateTo("/tiposcolecionaveis");
    }

    private bool TipoColecionavelExists(int id) {
        using var context = DbFactory.CreateDbContext();
        return context.TiposColecionaveis.Any(e => e.Id == id);
    }

}
