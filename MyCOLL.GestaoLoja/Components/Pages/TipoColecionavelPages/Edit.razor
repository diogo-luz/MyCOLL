@page "/tiposcolecionaveis/edit"
@using Microsoft.EntityFrameworkCore
@using MyCOLL.Data.Entities
@inject IDbContextFactory<MyCOLL.Data.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>TipoColecionavel</h2>
<hr/>
@if (TipoColecionavel is null) {
    <p>
        <em>Loading...</em>
    </p>
} else {
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="TipoColecionavel" OnValidSubmit="UpdateTipoColecionavel" FormName="edit" Enhance>
                <DataAnnotationsValidator/>
                <ValidationSummary role="alert"/>
                <input type="hidden" name="TipoColecionavel.Id" value="@TipoColecionavel.Id"/>
                <div class="mb-3">
                    <span class="text-danger">*</span>
                    <label for="nome" class="form-label">Nome:</label>
                    <InputText id="nome" @bind-Value="TipoColecionavel.Nome" class="form-control" aria-required="true"/>
                    <ValidationMessage For="() => TipoColecionavel.Nome" class="text-danger"/>
                </div>
                <div class="mb-3">
                    <label for="ordem" class="form-label">Ordem:</label>
                    <InputNumber id="ordem" @bind-Value="TipoColecionavel.Ordem" class="form-control"/>
                    <ValidationMessage For="() => TipoColecionavel.Ordem" class="text-danger"/>
                </div>
                <div class="mb-3">
                    <label for="urlimagem" class="form-label">UrlImagem:</label>
                    <InputText id="urlimagem" @bind-Value="TipoColecionavel.UrlImagem" class="form-control"/>
                    <ValidationMessage For="() => TipoColecionavel.UrlImagem" class="text-danger"/>
                </div>
                @* <div class="mb-3">
                    <label for="imagem" class="form-label">Imagem:</label>
                    <InputText id="imagem" @bind-Value="TipoColecionavel.Imagem" class="form-control" />
                    <ValidationMessage For="() => TipoColecionavel.Imagem" class="text-danger" />
                </div> *@
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/tiposcolecionaveis">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery] private int Id { get; set; }

    [SupplyParameterFromForm] private TipoColecionavel? TipoColecionavel { get; set; }

    protected override async Task OnInitializedAsync() {
        using var context = DbFactory.CreateDbContext();
        TipoColecionavel ??= await context.TiposColecionaveis.FirstOrDefaultAsync(m => m.Id == Id);

        if (TipoColecionavel is null) {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateTipoColecionavel() {
        using var context = DbFactory.CreateDbContext();
        context.Attach(TipoColecionavel!).State = EntityState.Modified;

        try {
            await context.SaveChangesAsync();
        } catch (DbUpdateConcurrencyException) {
            if (!TipoColecionavelExists(TipoColecionavel!.Id)) {
                NavigationManager.NavigateTo("notfound");
            } else {
                throw;
            }
        }

        NavigationManager.NavigateTo("/tiposcolecionaveis");
    }

    private bool TipoColecionavelExists(int id) {
        using var context = DbFactory.CreateDbContext();
        return context.TiposColecionaveis.Any(e => e.Id == id);
    }

}
