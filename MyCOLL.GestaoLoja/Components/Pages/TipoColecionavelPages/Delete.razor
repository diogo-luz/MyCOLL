@page "/tiposcolecionaveis/delete"
@using Microsoft.EntityFrameworkCore
@using MyCOLL.Data.Entities
@inject IDbContextFactory<MyCOLL.Data.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>TipoColecionavel</h2>
    <hr/>
    @if (tipocolecionavel is null) {
        <p>
            <em>Loading...</em>
        </p>
    } else {
        <dl class="row">
            <dt class="col-sm-2">Nome</dt>
            <dd class="col-sm-10">@tipocolecionavel.Nome</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Ordem</dt>
            <dd class="col-sm-10">@tipocolecionavel.Ordem</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UrlImagem</dt>
            <dd class="col-sm-10">@tipocolecionavel.UrlImagem</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Imagem</dt>
            <dd class="col-sm-10">@tipocolecionavel.Imagem</dd>
        </dl>
        <EditForm method="post" Model="tipocolecionavel" OnValidSubmit="DeleteTipoColecionavel" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(tipocolecionavel is null)">Delete</button> |
            <a href="/tiposcolecionaveis">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private TipoColecionavel? tipocolecionavel;

    [SupplyParameterFromQuery] private int Id { get; set; }

    protected override async Task OnInitializedAsync() {
        using var context = DbFactory.CreateDbContext();
        tipocolecionavel = await context.TiposColecionaveis.FirstOrDefaultAsync(m => m.Id == Id);

        if (tipocolecionavel is null) {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteTipoColecionavel() {
        using var context = DbFactory.CreateDbContext();
        context.TiposColecionaveis.Remove(tipocolecionavel!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/tiposcolecionaveis");
    }

}
