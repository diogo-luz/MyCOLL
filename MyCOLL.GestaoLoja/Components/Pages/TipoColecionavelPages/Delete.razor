@page "/tiposcolecionaveis/delete"
@using Microsoft.EntityFrameworkCore
@using MyCOLL.Data.Entities
@inject IDbContextFactory<MyCOLL.Data.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Eliminar Tipo de Colecionável</PageTitle>

<h1>Eliminar Tipo de Colecionável</h1>

<p class="text-danger">
    <strong>Tem a certeza que pretende eliminar este tipo?</strong>
</p>
<div>
    <hr/>
    @if (tipocolecionavel is null) {
        <p>
            <em>A carregar...</em>
        </p>
    } else {
        <dl class="row">
            <dt class="col-sm-2">Nome</dt>
            <dd class="col-sm-10">@tipocolecionavel.Nome</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Ordem</dt>
            <dd class="col-sm-10">@tipocolecionavel.Ordem</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">URL Imagem</dt>
            <dd class="col-sm-10">@tipocolecionavel.UrlImagem</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Imagem</dt>
            <dd class="col-sm-10">
                @if (tipocolecionavel.Imagem is not null && tipocolecionavel.Imagem.Length > 0) {
                    <img src="@($"data:image/png;base64, {Convert.ToBase64String(tipocolecionavel.Imagem)}")" alt="@tipocolecionavel.Nome" style="max-width: 100px; max-height: 100px;"/>
                } else {
                    <img src="img/placeholderImg.png" alt="Sem imagem" style="max-width: 100px; max-height: 100px"/>
                }
            </dd>
        </dl>
        <EditForm method="post" Model="tipocolecionavel" OnValidSubmit="DeleteTipoColecionavel" FormName="delete">
            <button type="submit" class="btn btn-danger" disabled="@(tipocolecionavel is null)">Eliminar</button> |
            <a href="/tiposcolecionaveis">Cancelar</a>
        </EditForm>
    }
</div>

@code {
    private TipoColecionavel? tipocolecionavel;

    [SupplyParameterFromQuery] private int Id { get; set; }

    protected override async Task OnInitializedAsync() {
        using var context = DbFactory.CreateDbContext();
        tipocolecionavel = await context.TiposColecionaveis.FirstOrDefaultAsync(m => m.Id == Id);

        if (tipocolecionavel is null) {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteTipoColecionavel() {
        using var context = DbFactory.CreateDbContext();
        context.TiposColecionaveis.Remove(tipocolecionavel!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/tiposcolecionaveis");
    }

}
