@page "/tiposcolecionaveis/delete"
@using Microsoft.EntityFrameworkCore
@using MyCOLL.Data.Entities
@using MyCOLL.Data.Data
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Eliminar Tipo de Colecionável</PageTitle>

<div class="container-fluid">
    @if (tipoColecionavel is null) {
        <div class="d-flex justify-content-center align-items-center" style="min-height: 400px;">
            <div class="spinner-border text-danger" role="status">
                <span class="visually-hidden">A carregar...</span>
            </div>
        </div>
    } else {
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="mb-0 text-danger">
                    <i class="bi bi-exclamation-triangle"></i> Eliminar Tipo
                </h1>
                <p class="text-muted mb-0">Esta ação não pode ser revertida</p>
            </div>
            <a href="/tiposcolecionaveis" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card border-danger shadow-sm">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0"><i class="bi bi-trash"></i> Confirmar Eliminação</h5>
                    </div>
                    <div class="card-body text-center">
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Atenção!</strong> Tem a certeza que pretende eliminar este tipo de colecionável?
                        </div>

                        @if (tipoColecionavel.Imagem is not null && tipoColecionavel.Imagem.Length > 0) {
                            <img src="@($"data:image/png;base64,{Convert.ToBase64String(tipoColecionavel.Imagem)}")"
                                 class="rounded mb-3" style="max-height: 100px;"/>
                        } else {
                            <div class="bg-light rounded d-flex align-items-center justify-content-center mx-auto mb-3" style="height: 100px; width: 100px;">
                                <i class="bi bi-image text-muted fs-3"></i>
                            </div>
                        }

                        <h4>@tipoColecionavel.Nome</h4>
                        <span class="badge bg-secondary">Ordem: @tipoColecionavel.Ordem</span>
                    </div>
                    <div class="card-footer bg-light">
                        <EditForm method="post" Model="tipoColecionavel" OnValidSubmit="DeleteTipoColecionavel" FormName="delete">
                            <div class="d-flex gap-2 justify-content-center">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Sim, Eliminar
                                </button>
                                <a href="/tiposcolecionaveis" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-lg"></i> Cancelar
                                </a>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private TipoColecionavel? tipoColecionavel;

    [SupplyParameterFromQuery] private int Id { get; set; }

    protected override async Task OnInitializedAsync() {
        using var context = DbFactory.CreateDbContext();
        tipoColecionavel = await context.TiposColecionaveis.FirstOrDefaultAsync(m => m.Id == Id);

        if (tipoColecionavel is null) {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteTipoColecionavel() {
        using var context = DbFactory.CreateDbContext();
        context.TiposColecionaveis.Remove(tipoColecionavel!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/tiposcolecionaveis");
    }

}
