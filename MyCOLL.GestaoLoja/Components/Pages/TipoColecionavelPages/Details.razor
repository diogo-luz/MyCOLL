@page "/tiposcolecionaveis/details"
@using Microsoft.EntityFrameworkCore
@using MyCOLL.Data.Entities
@inject IDbContextFactory<MyCOLL.Data.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>TipoColecionavel</h2>
    <hr/>
    @if (tipocolecionavel is null) {
        <p>
            <em>Loading...</em>
        </p>
    } else {
        <dl class="row">
            <dt class="col-sm-2">Nome</dt>
            <dd class="col-sm-10">@tipocolecionavel.Nome</dd>
            <dt class="col-sm-2">Ordem</dt>
            <dd class="col-sm-10">@tipocolecionavel.Ordem</dd>
            <dt class="col-sm-2">UrlImagem</dt>
            <dd class="col-sm-10">@tipocolecionavel.UrlImagem</dd>
            <dt class="col-sm-2">Imagem</dt>
            <dd class="col-sm-10">@tipocolecionavel.Imagem</dd>
        </dl>
        <div>
            <a href="@($"/tiposcolecionaveis/edit?id={tipocolecionavel.Id}")">Edit</a> |
            <a href="@($"/tiposcolecionaveis")">Back to List</a>
        </div>
    }
</div>

@code {
    private TipoColecionavel? tipocolecionavel;

    [SupplyParameterFromQuery] private int Id { get; set; }

    protected override async Task OnInitializedAsync() {
        using var context = DbFactory.CreateDbContext();
        tipocolecionavel = await context.TiposColecionaveis.FirstOrDefaultAsync(m => m.Id == Id);

        if (tipocolecionavel is null) {
            NavigationManager.NavigateTo("notfound");
        }
    }

}
