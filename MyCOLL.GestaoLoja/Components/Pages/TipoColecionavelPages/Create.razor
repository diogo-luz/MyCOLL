@page "/tiposcolecionaveis/create"
@using Microsoft.EntityFrameworkCore
@using MyCOLL.Data.Entities
@using MyCOLL.Data.Data
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Criar Tipo de Colecionável</PageTitle>

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0">
                <i class="bi bi-plus-circle text-success"></i> Novo Tipo de Colecionável
            </h1>
            <p class="text-muted mb-0">Adicionar um novo tipo</p>
        </div>
        <a href="/tiposcolecionaveis" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-pencil"></i> Dados do Tipo</h5>
                </div>
                <div class="card-body">
                    <EditForm method="post" Model="TipoColecionavel" OnValidSubmit="AddTipoColecionavel" FormName="create">
                        <DataAnnotationsValidator/>
                        <ValidationSummary class="alert alert-danger" role="alert"/>

                        <div class="mb-3">
                            <label for="nome" class="form-label">Nome: <span class="text-danger">*</span></label>
                            <InputText id="nome" @bind-Value="TipoColecionavel.Nome" class="form-control" placeholder="Nome do tipo"/>
                            <ValidationMessage For="() => TipoColecionavel.Nome" class="text-danger"/>
                        </div>

                        <div class="mb-3">
                            <label for="ordem" class="form-label">Ordem:</label>
                            <InputNumber id="ordem" @bind-Value="TipoColecionavel.Ordem" class="form-control"/>
                        </div>

                        <div class="mb-3">
                            <label for="urlimagem" class="form-label">URL Imagem:</label>
                            <InputText id="urlimagem" @bind-Value="TipoColecionavel.UrlImagem" class="form-control" placeholder="https://..."/>
                        </div>

                        <div class="mb-3">
                            <label for="imagem" class="form-label">Ou carregar ficheiro:</label>
                            <InputFile id="imagem" OnChange="OnImageChange" class="form-control" accept=".png, .jpg, .jpeg"/>
                            @if (previewUrl is not null) {
                                <div class="mt-2">
                                    <img src="@previewUrl" class="img-thumbnail" style="max-width: 200px;"/>
                                </div>
                            }
                        </div>

                        <hr/>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-lg"></i> Criar Tipo
                            </button>
                            <a href="/tiposcolecionaveis" class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg"></i> Cancelar
                            </a>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm] private TipoColecionavel TipoColecionavel { get; set; } = new();
    private string? previewUrl;

    private async Task OnImageChange(InputFileChangeEventArgs e) {
        var file = e.File;
        var maxSize = 5 * 1024 * 1024;
        if (file.Size > maxSize) return;

        using var stream = new MemoryStream();
        await file.OpenReadStream(maxSize).CopyToAsync(stream);
        TipoColecionavel.Imagem = stream.ToArray();

        using var previewStream = new MemoryStream();
        await file.OpenReadStream(maxSize).CopyToAsync(previewStream);
        var base64 = Convert.ToBase64String(previewStream.ToArray());
        previewUrl = $"data:{file.ContentType};base64,{base64}";
    }

    private async Task AddTipoColecionavel() {
        using var context = DbFactory.CreateDbContext();
        context.TiposColecionaveis.Add(TipoColecionavel);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/tiposcolecionaveis");
    }

}
