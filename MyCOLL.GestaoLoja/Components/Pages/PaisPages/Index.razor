@page "/paises"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using MyCOLL.Data.Entities
@using MyCOLL.Data.Data
@implements IAsyncDisposable
@inject IDbContextFactory<MyCOLL.Data.Data.ApplicationDbContext> DbFactory

<PageTitle>Países</PageTitle>

<h1>Países</h1>

<p>
    <a href="paises/create">Criar novo país</a>
</p>

<QuickGrid Class="table" Items="context.Paises">
    <TemplateColumn Context="p" Title="Bandeira" Class="col-1">
        @if (p.Bandeira is not null && p.Bandeira.Length > 0) {
            <img src="@($"data:image/png;base64, {Convert.ToBase64String(p.Bandeira)}")" alt="@p.Nome" style="max-width: 100px; max-height: 100px;"/>
        } else {
            <img src="img/placeholderImg.png" alt="Sem imagem" style="max-width: 100px; max-height: 100px"/>
        }
    </TemplateColumn>

    <PropertyColumn Property="p => p.Nome" Title="Nome"/>
    <PropertyColumn Property="p => p.CodigoISO" Title="Código ISO"/>
    <PropertyColumn Property="p => p.Ordem" Title="Ordem"/>

    <TemplateColumn Context="p" Title="Ações">
        <a href="@($"paises/edit?id={p.Id}")">
            <i class="bi bi-pencil-square"></i>
        </a> |
        <a href="@($"paises/details?id={p.Id}")">
            <i class="bi bi-eye-fill"></i>
        </a> |
        <a href="@($"paises/delete?id={p.Id}")">
            <i class="bi bi-trash-fill"></i>
        </a>
    </TemplateColumn>
</QuickGrid>

@code {
    private ApplicationDbContext context = default!;

    protected override void OnInitialized() {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
