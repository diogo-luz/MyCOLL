@page "/paises/edit"
@using Microsoft.EntityFrameworkCore
@using MyCOLL.Data.Entities
@using MyCOLL.Data.Data
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Editar País</PageTitle>

<div class="container-fluid">
    @if (Pais is null) {
        <div class="d-flex justify-content-center align-items-center" style="min-height: 400px;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">A carregar...</span>
            </div>
        </div>
    } else {
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="mb-0">
                    <i class="bi bi-pencil text-primary"></i> Editar País
                </h1>
                <p class="text-muted mb-0">Modificar dados do país</p>
            </div>
            <a href="/paises" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-flag"></i> Dados do País</h5>
                    </div>
                    <div class="card-body">
                        <EditForm method="post" Model="Pais" OnValidSubmit="UpdatePais" FormName="edit">
                            <DataAnnotationsValidator/>
                            <ValidationSummary class="alert alert-danger" role="alert"/>
                            <input type="hidden" name="Pais.Id" value="@Pais.Id"/>

                            <div class="mb-3">
                                <label for="nome" class="form-label">Nome: <span class="text-danger">*</span></label>
                                <InputText id="nome" @bind-Value="Pais.Nome" class="form-control" placeholder="Nome do país"/>
                                <ValidationMessage For="() => Pais.Nome" class="text-danger"/>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="codigoiso" class="form-label">Código ISO:</label>
                                    <InputText id="codigoiso" @bind-Value="Pais.CodigoISO" class="form-control" placeholder="PT, ES, FR..."/>
                                    <ValidationMessage For="() => Pais.CodigoISO" class="text-danger"/>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="ordem" class="form-label">Ordem:</label>
                                    <InputNumber id="ordem" @bind-Value="Pais.Ordem" class="form-control"/>
                                    <ValidationMessage For="() => Pais.Ordem" class="text-danger"/>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="imagem" class="form-label">Bandeira:</label>
                                <InputFile id="imagem" OnChange="OnImageChange" class="form-control" accept=".png, .jpg, .jpeg"/>
                                <div class="mt-2 text-center bg-light p-2 rounded">
                                    @if (previewUrl is not null) {
                                        <img src="@previewUrl" class="img-fluid" style="max-height: 100px;"/>
                                    } else if (Pais.Bandeira is not null && Pais.Bandeira.Length > 0) {
                                        <img src="@($"data:image/png;base64,{Convert.ToBase64String(Pais.Bandeira)}")" class="img-fluid" style="max-height: 100px;"/>
                                    } else {
                                        <div class="d-flex align-items-center justify-content-center" style="height: 100px;">
                                            <span class="text-muted"><i class="bi bi-flag"></i> Sem bandeira</span>
                                        </div>
                                    }
                                </div>
                            </div>

                            <hr/>
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-lg"></i> Guardar Alterações
                                </button>
                                <a href="/paises" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-lg"></i> Cancelar
                                </a>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [SupplyParameterFromQuery] private int Id { get; set; }
    [SupplyParameterFromForm] private Pais? Pais { get; set; }
    private string? previewUrl;

    private async Task OnImageChange(InputFileChangeEventArgs e) {
        var file = e.File;
        var maxSize = 5 * 1024 * 1024;

        if (file.Size > maxSize) return;

        using var stream = new MemoryStream();
        await file.OpenReadStream(maxSize).CopyToAsync(stream);
        Pais!.Bandeira = stream.ToArray();

        using var previewStream = new MemoryStream();
        await file.OpenReadStream(maxSize).CopyToAsync(previewStream);
        var base64 = Convert.ToBase64String(previewStream.ToArray());
        previewUrl = $"data:{file.ContentType};base64,{base64}";
    }

    protected override async Task OnInitializedAsync() {
        using var context = DbFactory.CreateDbContext();
        Pais ??= await context.Paises.FirstOrDefaultAsync(m => m.Id == Id);

        if (Pais is null) {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task UpdatePais() {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Pais!).State = EntityState.Modified;

        try {
            await context.SaveChangesAsync();
        } catch (DbUpdateConcurrencyException) {
            if (!PaisExists(Pais!.Id)) {
                NavigationManager.NavigateTo("notfound");
            } else {
                throw;
            }
        }

        NavigationManager.NavigateTo("/paises");
    }

    private bool PaisExists(int id) {
        using var context = DbFactory.CreateDbContext();
        return context.Paises.Any(e => e.Id == id);
    }

}
