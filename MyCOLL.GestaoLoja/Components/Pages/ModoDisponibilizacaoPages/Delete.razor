@page "/modosdisponibilizacao/delete"
@using Microsoft.EntityFrameworkCore
@using MyCOLL.Data.Entities
@inject IDbContextFactory<MyCOLL.Data.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Eliminar Modo de Disponibilização</PageTitle>

<h1>Eliminar Modo de Disponibilização</h1>

<p class="text-danger">
    <strong>Tem a certeza que pretende eliminar este modo?</strong>
</p>
<div>
    <hr/>
    @if (mododisponibilizacao is null) {
        <p>
            <em>A carregar...</em>
        </p>
    } else {
        <dl class="row">
            <dt class="col-sm-2">Nome</dt>
            <dd class="col-sm-10">@mododisponibilizacao.Nome</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Descrição</dt>
            <dd class="col-sm-10">@mododisponibilizacao.Descricao</dd>
        </dl>
        <EditForm method="post" Model="mododisponibilizacao" OnValidSubmit="DeleteModoDisponibilizacao" FormName="delete">
            <button type="submit" class="btn btn-danger" disabled="@(mododisponibilizacao is null)">Eliminar</button> |
            <a href="/modosdisponibilizacao">Cancelar</a>
        </EditForm>
    }
</div>

@code {
    private ModoDisponibilizacao? mododisponibilizacao;

    [SupplyParameterFromQuery] private int Id { get; set; }

    protected override async Task OnInitializedAsync() {
        using var context = DbFactory.CreateDbContext();
        mododisponibilizacao = await context.ModosDisponibilizacao.FirstOrDefaultAsync(m => m.Id == Id);

        if (mododisponibilizacao is null) {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteModoDisponibilizacao() {
        using var context = DbFactory.CreateDbContext();
        context.ModosDisponibilizacao.Remove(mododisponibilizacao!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/modosdisponibilizacao");
    }

}
