@page "/modosdisponibilizacao/delete"
@using Microsoft.EntityFrameworkCore
@using MyCOLL.Data.Entities
@using MyCOLL.Data.Data
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Eliminar Modo de Disponibilização</PageTitle>

<div class="container-fluid">
    @if (modoDisponibilizacao is null) {
        <div class="d-flex justify-content-center align-items-center" style="min-height: 400px;">
            <div class="spinner-border text-danger" role="status">
                <span class="visually-hidden">A carregar...</span>
            </div>
        </div>
    } else {
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="mb-0 text-danger">
                    <i class="bi bi-exclamation-triangle"></i> Eliminar Modo
                </h1>
                <p class="text-muted mb-0">Esta ação não pode ser revertida</p>
            </div>
            <a href="/modosdisponibilizacao" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card border-danger shadow-sm">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0"><i class="bi bi-trash"></i> Confirmar Eliminação</h5>
                    </div>
                    <div class="card-body text-center">
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Atenção!</strong> Tem a certeza que pretende eliminar este modo?
                        </div>

                        <div class="mb-4">
                            <i class="bi bi-box-seam text-danger" style="font-size: 3rem;"></i>
                            <h4>@modoDisponibilizacao.Nome</h4>
                            <p class="text-muted">@modoDisponibilizacao.Descricao</p>
                        </div>
                    </div>
                    <div class="card-footer bg-light">
                        <EditForm method="post" Model="modoDisponibilizacao" OnValidSubmit="DeleteModoDisponibilizacao" FormName="delete">
                            <div class="d-flex gap-2 justify-content-center">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Sim, Eliminar
                                </button>
                                <a href="/modosdisponibilizacao" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-lg"></i> Cancelar
                                </a>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private ModoDisponibilizacao? modoDisponibilizacao;

    [SupplyParameterFromQuery] private int Id { get; set; }

    protected override async Task OnInitializedAsync() {
        using var context = DbFactory.CreateDbContext();
        modoDisponibilizacao = await context.ModosDisponibilizacao.FirstOrDefaultAsync(m => m.Id == Id);

        if (modoDisponibilizacao is null) {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteModoDisponibilizacao() {
        using var context = DbFactory.CreateDbContext();
        context.ModosDisponibilizacao.Remove(modoDisponibilizacao!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/modosdisponibilizacao");
    }

}
