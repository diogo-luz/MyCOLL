                <div class="mb-3">
                    <span class="text-danger">*</span>
                    <label for="mododisponibilizacaoid" class="form-label">ModoDisponibilizacaoId:</label>
                    <InputNumber id="mododisponibilizacaoid" @bind-Value="Produto.ModoDisponibilizacaoId" class="form-control" aria-required="true"/>
