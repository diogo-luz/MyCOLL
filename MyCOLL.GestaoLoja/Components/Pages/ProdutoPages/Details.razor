@page "/produtos/details"
@using Microsoft.EntityFrameworkCore
@using MyCOLL.Data.Entities
@inject IDbContextFactory<MyCOLL.Data.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Produto</h2>
    <hr/>
    @if (produto is null) {
        <p>
            <em>Loading...</em>
        </p>
    } else {
        <dl class="row">
            <dt class="col-sm-2">Nome</dt>
            <dd class="col-sm-10">@produto.Nome</dd>
            <dt class="col-sm-2">Descricao</dt>
            <dd class="col-sm-10">@produto.Descricao</dd>
            <dt class="col-sm-2">PrecoBase</dt>
            <dd class="col-sm-10">@produto.PrecoBase</dd>
            <dt class="col-sm-2">Percentagem</dt>
            <dd class="col-sm-10">@produto.Percentagem</dd>
            <dt class="col-sm-2">PrecoFinal</dt>
            <dd class="col-sm-10">@produto.PrecoFinal</dd>
            <dt class="col-sm-2">Stock</dt>
            <dd class="col-sm-10">@produto.Stock</dd>
            <dt class="col-sm-2">ParaVenda</dt>
            <dd class="col-sm-10">@produto.ParaVenda</dd>
            <dt class="col-sm-2">Activo</dt>
            <dd class="col-sm-10">@produto.Activo</dd>
            <dt class="col-sm-2">Estado</dt>
            <dd class="col-sm-10">@produto.Estado</dd>
            <dt class="col-sm-2">Ano</dt>
            <dd class="col-sm-10">@produto.Ano</dd>
            <dt class="col-sm-2">UrlImagem</dt>
            <dd class="col-sm-10">@produto.UrlImagem</dd>
            <dt class="col-sm-2">Imagem</dt>
            <dd class="col-sm-10">
                @if (produto.Imagem is not null && produto.Imagem.Length > 0) {
                    <img src="@($"data:image/png;base64, {Convert.ToBase64String(produto.Imagem)}")" alt="@produto.Nome" style="max-width: 100px; max-height: 100px;"/>
                } else {
                    <img src="img/placeholderImg.png" alt="Sem imagem" style="max-width: 100px; max-height: 100px"/>
                }
            </dd>
            <dt class="col-sm-2">DataCriacao</dt>
            <dd class="col-sm-10">@produto.DataCriacao</dd>
            <dt class="col-sm-2">FornecedorId</dt>
            <dd class="col-sm-10">@produto.FornecedorId</dd>
            <dt class="col-sm-2">TipoColecionavelId</dt>
            <dd class="col-sm-10">@produto.TipoColecionavelId</dd>
            <dt class="col-sm-2">PaisId</dt>
            <dd class="col-sm-10">@produto.PaisId</dd>
            <dt class="col-sm-2">CategoriaId</dt>
            <dd class="col-sm-10">@produto.CategoriaId</dd>
            <dt class="col-sm-2">ModoDisponibilizacaoId</dt>
            <dd class="col-sm-10">@produto.ModoDisponibilizacaoId</dd>
        </dl>
        <div>
            <a href="@($"/produtos/edit?id={produto.Id}")">Edit</a> |
            <a href="@($"/produtos")">Back to List</a>
        </div>
    }
</div>

@code {
    private Produto? produto;

    [SupplyParameterFromQuery] private int Id { get; set; }

    protected override async Task OnInitializedAsync() {
        using var context = DbFactory.CreateDbContext();
        produto = await context.Produtos.FirstOrDefaultAsync(m => m.Id == Id);

        if (produto is null) {
            NavigationManager.NavigateTo("notfound");
        }
    }

}
