@page "/utilizadores/edit"
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject UserManager<ApplicationUser> UserManager
@inject RoleManager<IdentityRole> RoleManager
@inject NavigationManager NavigationManager

<PageTitle>Editar Utilizador</PageTitle>

<div class="container-fluid">
    @if (utilizador is null) {
        <div class="d-flex justify-content-center align-items-center" style="min-height: 400px;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">A carregar...</span>
            </div>
        </div>
    } else {
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="mb-0">
                    <i class="bi bi-pencil text-primary"></i> Editar Utilizador
                </h1>
                <p class="text-muted mb-0">Modificar dados de @utilizador.Nome</p>
            </div>
            <a href="/utilizadores" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-person"></i> Dados do Utilizador</h5>
                    </div>
                    <div class="card-body">
                        <EditForm Model="utilizador" OnValidSubmit="UpdateUtilizador" FormName="edit">
                            <DataAnnotationsValidator/>
                            <ValidationSummary class="alert alert-danger" role="alert"/>
                            <input type="hidden" name="utilizador.Id" value="@utilizador.Id"/>

                            <div class="row">
                                <!-- Dados Pessoais -->
                                <div class="col-md-6">
                                    <h6 class="text-muted mb-3"><i class="bi bi-person-vcard"></i> Dados Pessoais</h6>

                                    <div class="mb-3">
                                        <label for="nome" class="form-label">Nome:</label>
                                        <InputText id="nome" @bind-Value="utilizador.Nome" class="form-control"/>
                                    </div>
                                    <div class="mb-3">
                                        <label for="apelido" class="form-label">Apelido:</label>
                                        <InputText id="apelido" @bind-Value="utilizador.Apelido" class="form-control"/>
                                    </div>
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email:</label>
                                        <InputText id="email" @bind-Value="utilizador.Email" class="form-control bg-light" readonly/>
                                        <small class="text-muted">O email não pode ser alterado.</small>
                                    </div>
                                    <div class="mb-3">
                                        <label for="nif" class="form-label">NIF:</label>
                                        <InputNumber id="nif" @bind-Value="utilizador.NIF" class="form-control"/>
                                    </div>
                                </div>

                                <!-- Morada -->
                                <div class="col-md-6">
                                    <h6 class="text-muted mb-3"><i class="bi bi-geo-alt"></i> Morada</h6>

                                    <div class="mb-3">
                                        <label for="rua" class="form-label">Rua:</label>
                                        <InputText id="rua" @bind-Value="utilizador.Rua" class="form-control"/>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="mb-3">
                                                <label for="codigopostal" class="form-label">Código Postal:</label>
                                                <InputText id="codigopostal" @bind-Value="utilizador.CodigoPostal" class="form-control"/>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="mb-3">
                                                <label for="localidade" class="form-label">Localidade:</label>
                                                <InputText id="localidade" @bind-Value="utilizador.Localidade" class="form-control"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="pais" class="form-label">País:</label>
                                        <InputText id="pais" @bind-Value="utilizador.Pais" class="form-control"/>
                                    </div>
                                </div>
                            </div>

                            <!-- Configuração -->
                            <h6 class="text-muted mb-3 mt-3"><i class="bi bi-gear"></i> Configuração</h6>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="tipo" class="form-label">Tipo de Utilizador:</label>
                                        <InputSelect id="tipo" class="form-select" @bind-Value="utilizador.TipoUtilizador">
                                            <option value="">Escolha um tipo</option>
                                            <option value="Cliente">Cliente</option>
                                            <option value="Fornecedor">Fornecedor</option>
                                        </InputSelect>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3 form-check mt-4">
                                        <InputCheckbox id="activo" @bind-Value="utilizador.Activo" class="form-check-input"/>
                                        <label for="activo" class="form-check-label">Conta Activa</label>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3 form-check mt-4">
                                        <InputCheckbox id="emailConfirmed" @bind-Value="utilizador.EmailConfirmed" class="form-check-input"/>
                                        <label for="emailConfirmed" class="form-check-label">Email Confirmado</label>
                                    </div>
                                </div>
                            </div>

                            <!-- Roles -->
                            <h6 class="text-muted mb-3 mt-3"><i class="bi bi-shield-check"></i> Roles</h6>
                            <div class="row mb-3">
                                @foreach (var role in todasRoles) {
                                    <div class="col-md-4">
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input" id="role_@role"
                                                   checked="@selectedRoles.Contains(role)"
                                                   @onchange="@(e => ToggleRole(role, (bool)e.Value!))"/>
                                            <label class="form-check-label" for="role_@role">
                                                <span class="badge bg-primary">@role</span>
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>

                            <hr/>
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-lg"></i> Guardar Alterações
                                </button>
                                <a href="/utilizadores" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-lg"></i> Cancelar
                                </a>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [SupplyParameterFromQuery] private string? Id { get; set; }

    private ApplicationUser? utilizador;
    private List<string> todasRoles = new();
    private List<string> selectedRoles = new();

    protected override async Task OnInitializedAsync() {
        if (string.IsNullOrEmpty(Id)) {
            NavigationManager.NavigateTo("notfound");
            return;
        }

        using var context = DbFactory.CreateDbContext();
        utilizador = await context.Users.FirstOrDefaultAsync(u => u.Id == Id);

        if (utilizador is null) {
            NavigationManager.NavigateTo("notfound");
            return;
        }

        todasRoles = await RoleManager.Roles.Select(r => r.Name!).ToListAsync();
        selectedRoles = (await UserManager.GetRolesAsync(utilizador)).ToList();
    }

    private void ToggleRole(string role, bool isChecked) {
        if (isChecked && !selectedRoles.Contains(role)) {
            selectedRoles.Add(role);
        } else if (!isChecked && selectedRoles.Contains(role)) {
            selectedRoles.Remove(role);
        }
    }

    private async Task UpdateUtilizador() {
        if (utilizador is null) return;

        var userToUpdate = await UserManager.FindByIdAsync(utilizador.Id);
        if (userToUpdate is null) return;

        userToUpdate.Nome = utilizador.Nome;
        userToUpdate.Apelido = utilizador.Apelido;
        userToUpdate.NIF = utilizador.NIF;
        userToUpdate.Rua = utilizador.Rua;
        userToUpdate.CodigoPostal = utilizador.CodigoPostal;
        userToUpdate.Localidade = utilizador.Localidade;
        userToUpdate.Pais = utilizador.Pais;
        userToUpdate.TipoUtilizador = utilizador.TipoUtilizador;
        userToUpdate.Activo = utilizador.Activo;
        userToUpdate.EmailConfirmed = utilizador.EmailConfirmed;

        await UserManager.UpdateAsync(userToUpdate);

        var currentRoles = await UserManager.GetRolesAsync(userToUpdate);
        var rolesToRemove = currentRoles.Except(selectedRoles);
        var rolesToAdd = selectedRoles.Except(currentRoles);

        await UserManager.RemoveFromRolesAsync(userToUpdate, rolesToRemove);
        await UserManager.AddToRolesAsync(userToUpdate, rolesToAdd);

        NavigationManager.NavigateTo("/utilizadores");
    }

}
