@page "/roles"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid

@inject RoleManager<IdentityRole> RoleManager
@inject UserManager<ApplicationUser> UserManager

<PageTitle>Roles</PageTitle>

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0">
                <i class="bi bi-shield-lock text-danger"></i> Roles
            </h1>
            <p class="text-muted mb-0">Gestão de roles do sistema</p>
        </div>
        <a href="roles/create" class="btn btn-danger">
            <i class="bi bi-plus-lg"></i> Nova Role
        </a>
    </div>

    <!-- Stats -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card border-danger h-100">
                <div class="card-body text-center">
                    <h3 class="text-danger">@roles.Count</h3>
                    <small class="text-muted">Total de Roles</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Table Card -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-table"></i> Lista de Roles</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <QuickGrid Class="table table-hover mb-0" Items="roles.AsQueryable()">
                    <TemplateColumn Context="r" Title="Ícone" Class="col-1">
                        <div class="bg-danger text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                            <i class="bi bi-shield-check"></i>
                        </div>
                    </TemplateColumn>
                    <TemplateColumn Context="r" Title="Nome da Role">
                        <strong>@r.Name</strong>
                    </TemplateColumn>
                    <TemplateColumn Context="r" Title="Nº Utilizadores">
                        <span class="badge bg-primary">@(userCounts.ContainsKey(r.Name!) ? userCounts[r.Name!] : 0) utilizadores</span>
                    </TemplateColumn>
                    <TemplateColumn Context="r" Title="Ações">
                        <div class="btn-group btn-group-sm">
                            <a href="@($"roles/details?id={r.Id}")" class="btn btn-outline-info" title="Detalhes">
                                <i class="bi bi-eye-fill"></i>
                            </a>
                            <a href="@($"roles/delete?id={r.Id}")" class="btn btn-outline-danger" title="Eliminar">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </TemplateColumn>
                </QuickGrid>
            </div>
        </div>
    </div>
</div>

@code {
    private List<IdentityRole> roles = new();
    private Dictionary<string, int> userCounts = new();

    protected override async Task OnInitializedAsync() {
        roles = await RoleManager.Roles.OrderBy(r => r.Name).ToListAsync();

        foreach (var role in roles) {
            var usersInRole = await UserManager.GetUsersInRoleAsync(role.Name!);
            userCounts[role.Name!] = usersInRole.Count;
        }
    }

}
