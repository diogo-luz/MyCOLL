@page "/Account/Manage/TwoFactorAuthentication"

@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Identity
@using MyCOLL.Data.Data

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject IdentityUserAccessor UserAccessor
@inject IdentityRedirectManager RedirectManager

<PageTitle>Autenticação de dois factores (2FA)</PageTitle>

<StatusMessage/>
<h3>Autenticação de dois factores (2FA)</h3>
@if (canTrack) {
    if (is2faEnabled) {
        if (recoveryCodesLeft == 0) {
            <div class="alert alert-danger">
                <strong>Não tem mais códigos de recuperação.</strong>
                <p>Tem de <a href="Account/Manage/GenerateRecoveryCodes">gerar um novo conjunto de códigos de recuperação</a> antes de poder iniciar sessão com um código de recuperação.</p>
            </div>
        } else if (recoveryCodesLeft == 1) {
            <div class="alert alert-danger">
                <strong>Tem 1 código de recuperação restante.</strong>
                <p>Pode <a href="Account/Manage/GenerateRecoveryCodes">gerar um novo conjunto de códigos de recuperação</a>.</p>
            </div>
        } else if (recoveryCodesLeft <= 3) {
            <div class="alert alert-warning">
                <strong>Tem @recoveryCodesLeft códigos de recuperação restantes.</strong>
                <p>Deve <a href="Account/Manage/GenerateRecoveryCodes">gerar um novo conjunto de códigos de recuperação</a>.</p>
            </div>
        }

        if (isMachineRemembered) {
            <form style="display: inline-block" @formname="forget-browser" @onsubmit="OnSubmitForgetBrowserAsync" method="post">
                <AntiforgeryToken/>
                <button type="submit" class="btn btn-primary">Esquecer este navegador</button>
            </form>
        }

        <a href="Account/Manage/Disable2fa" class="btn btn-primary">Desactivar 2FA</a>
        <a href="Account/Manage/GenerateRecoveryCodes" class="btn btn-primary">Eliminar códigos de recuperação</a>
    }

    <h4>App autenticadora</h4>
    @if (!hasAuthenticator) {
        <a href="Account/Manage/EnableAuthenticator" class="btn btn-primary">Adicionar app autenticadora</a>
    } else {
        <a href="Account/Manage/EnableAuthenticator" class="btn btn-primary">Configurar app autenticadora</a>
        <a href="Account/Manage/ResetAuthenticator" class="btn btn-primary">Eliminar app autenticadora</a>
    }
} else {
    <div class="alert alert-danger">
        <strong>Política de privacidade e cookies não foram aceites.</strong>
        <p>Tem de aceitar a política antes de poder activar a autenticação de dois factores.</p>
    </div>
}

@code {
    private bool canTrack;
    private bool hasAuthenticator;
    private int recoveryCodesLeft;
    private bool is2faEnabled;
    private bool isMachineRemembered;

    [CascadingParameter] private HttpContext HttpContext { get; set; } = default!;

    protected override async Task OnInitializedAsync() {
        var user = await UserAccessor.GetRequiredUserAsync(HttpContext);
        canTrack = HttpContext.Features.Get<ITrackingConsentFeature>()?.CanTrack ?? true;
        hasAuthenticator = await UserManager.GetAuthenticatorKeyAsync(user) is not null;
        is2faEnabled = await UserManager.GetTwoFactorEnabledAsync(user);
        isMachineRemembered = await SignInManager.IsTwoFactorClientRememberedAsync(user);
        recoveryCodesLeft = await UserManager.CountRecoveryCodesAsync(user);
    }

    private async Task OnSubmitForgetBrowserAsync() {
        await SignInManager.ForgetTwoFactorClientAsync();

        RedirectManager.RedirectToCurrentPageWithStatus(
            "Este navegador foi esquecido. Quando iniciar sessão novamente a partir deste navegador, será solicitado o código 2fa.",
            HttpContext);
    }

}
